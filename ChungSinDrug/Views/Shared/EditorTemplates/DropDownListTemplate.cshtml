
@{
    var optionLabel = Html.GetUIHintParametersValue<string>("OptionLabel");

    var methodName = Html.GetUIHintParametersValue<string>("DropDownListMethodName");

    var groupName = Html.GetUIHintParametersValue<string>("DropDownListName");
    var source = typeof(DropDownListHelper)
                    .GetMethod(methodName)
                    .Invoke(null,
                            new object[] { groupName , ViewData.TemplateInfo.FormattedModelValue }) 
                            as IEnumerable<SelectListItem>;
}

@Html.DropDownList("", source, optionLabel, new { @class = "form-control" })
