
@{
    ViewBag.Title = "註冊";
}

<div class="container">
    <h2>註冊</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="localRegisterForm">
                @Html.Partial("~/Views/Website/Account/_LocalRegister.cshtml")
            </section>
        </div>
        <div class="col-md-4">
            <section id="socialRegisterForm">
                @Html.Partial("~/Views/Website/Account/_ExternalRegister.cshtml", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
