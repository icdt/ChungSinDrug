@model icdtFramework.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登入畫面</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/admin/css")

    <!--引用icdt plugins css-->
    @Styles.Render("~/icdtFramework/plugins/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!--引用icdt plugins js-->
    @Scripts.Render("~/admin/theme/js")
    @Scripts.Render("~/icdtFramework/plugins/js")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">請登入</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "帳號" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密碼" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                                <input type="submit" value="登入" class="btn btn-info btn-block" />
                                <br />
                                @*<p>
                                        @Html.ActionLink("註冊為新使用者", "Register")
                                    </p>*@
                                @*請在啟用密碼重設功能的帳戶確認之後啟用此項目*@
                                @*<p>
                                        @Html.ActionLink("忘記密碼?", "ResetPassword")
                                    </p>*@
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
